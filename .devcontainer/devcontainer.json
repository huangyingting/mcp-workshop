{
  "name": "mcp-workshop",
  "image": "mcr.microsoft.com/devcontainers/universal:2-linux",
  "remoteUser": "vscode",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-azuretools.vscode-docker",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "github.copilot"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "files.eol": "\n",
        "python.defaultInterpreterPath": "/usr/bin/python3"
      }
    }
  },

  "postCreateCommand": "bash -lc 'if [ -f package.json ]; then corepack enable >/dev/null 2>&1 || true; if [ -f pnpm-lock.yaml ]; then pnpm i; elif [ -f yarn.lock ]; then yarn install; else npm ci || npm i; fi; fi; if [ -f requirements.txt ]; then pip3 install -r requirements.txt; fi'",

  "forwardPorts": [3000],
  "portsAttributes": {
    "3000": { "label": "Web" }
  },

  "mounts": [
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind,consistency=cached"
  ],

  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "16gb"
  }
}
