{
    "inputs": [
        {
            "type": "promptString",
            "id": "functions-mcp-extension-system-key",
            "description": "Azure Functions MCP Extension System Key",
            "password": true
        },
        {
            "type": "promptString",
            "id": "functionapp-name",
            "description": "Azure Functions App Name"
        }
    ],
    "servers": {
        "github": {
            "url": "https://api.githubcopilot.com/mcp/",
            "type": "http"
        },
        "simple_stock_server": {
            "command": "uv",
            "args": [
                "run",
                "servers/simple_stock_server.py"
            ],
            "type": "stdio"
        },
        "entraid_weather_server": {
            "url": "http://localhost:8000/mcp",
            "type": "http"
        },
        "entraid_obo_server": {
            "url": "http://localhost:9000/mcp",
            "type": "http"
        },        
        "mcp_foundry_server": {
            "type": "stdio",
            "command": "uvx",
            "args": [
                "--prerelease=allow",
                "--from",
                "git+https://github.com/azure-ai-foundry/mcp-foundry.git",
                "run-azure-ai-foundry-mcp",
                "--envFile",
                "${workspaceFolder}/.env"
            ]
        },
        "local_matheval_server": {
            "type": "sse",
            "url": "http://localhost:7071/runtime/webhooks/mcp/sse"
        },
        "remote_matheval_server": {
            "url": "https://${input:functionapp-name}.azurewebsites.net/runtime/webhooks/mcp/sse",
            "type": "sse",
            "headers": {
                "x-functions-key": "${input:functions-mcp-extension-system-key}"
            }
        },
        "icsu_logic_app": {
            "url": "https://icsulogicapp.azurewebsites.net/api/mcp",
            "type": "http"
        }
    }
}